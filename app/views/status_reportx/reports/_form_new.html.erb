<% if @view_in_config && @erb_code  %>
  <%= render inline: @erb_code %>
  
  <% else %>
<%= simple_form_for @report do |f| %>    
	  <%= f.input :report_date, :label => t('Report Date'), :as => :string %>
      <%= f.input :thing_did, :label => t('Things Did'), :input_html => {:rows => 4} %>
	  <%= f.input :report_from_date, :label => t('From'), :as => :string %>
	  <%= f.input :report_to_date, :label => t('To'), :as => :string %>
	  <%= f.input :report_for, :as => :hidden, :input_html => {:value => @report_for} %>
	  <%= f.input :resource_id, :as => :hidden, :input_html => {:value => @resource_id} %>
	  <%= f.input :resource_string, :as => :hidden, :input_html => {:value => @resource_string} %>
	  
	  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
	  <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>  
<% end %>
  
<% end%>

